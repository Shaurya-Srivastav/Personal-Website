<style>
    /* small */
    small {
        background-color: #584966;
        color: #fdebf3;
        border-radius: 6px;
        font-family: "Josefin Sans", sans-serif;
        font-weight: 600;
        padding: 0.3em 0.6em 0.2em;
    }

    /* Button */
    button {
        background: rgba(0, 0, 0, 0);
        border: 2px solid #78c2ad;
        border-radius: 8px;
        color: #78c2ad;
        font:
            600 16px "Josefin Sans",
            sans-serif;
        padding: 8px 16px;
        transition:
            background-color 0.4s,
            color 0.4s;
    }

    button:hover {
        background-color: #78c2ad;
        color: #fdebf3;
        cursor: pointer;
    }

    .button {
        text-align: center;
    }

