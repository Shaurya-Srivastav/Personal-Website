    <style>
        /* Existing CSS */
        /* small */
        small {
            background-color: #584966;
            color: #fdebf3;
            border-radius: 6px;
            font-family: "Josefin Sans", sans-serif;
            font-weight: 600;
            padding: 0.3em 0.6em 0.2em;
        }

        /* Button */
        button {
            background: rgba(0, 0, 0, 0);
            border: 2px solid #78c2ad;
            border-radius: 8px;
            color: #78c2ad;
            font:
                600 16px "Josefin Sans",
                sans-serif;
            padding: 8px 16px;
            transition:
                background-color 0.4s,
                color 0.4s;
        }

        button:hover {
            background-color: #78c2ad;
            color: #fdebf3;
            cursor: pointer;
        }

        .button {
            text-align: center;
        }

        /* Skill images */
        .link-card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            list-style: none;
            padding: 0;
        }

        .github-link {
            text-align: center;
            margin: 2em 0;
        }

        .github-link img {
            transition: transform 0.3s;
        }

        .github-link img:hover {
            transform: scale(1.1);
        }

        .github-link p {
            margin-top: 0.5em;
            font-size: 1.1em;
            color: #555;
        }

        @media only screen and (max-width: 600px) {
            .link-card-grid {
                grid-template-columns: 1fr;
            }

            .github-link img {
                width: 80px;
                height: 80px;
            }

            .github-link p {
                font-size: 1em;
            }
        }
    </style>
</Layout>
